<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/articleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_gravity="bottom"
            android:maxEms="15"
            android:textSize="13sp"
            android:layout_margin="8dp"
            android:textColor="@color/quantum_grey"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardViewCrops"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/image_not_available" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/absListViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/product_like_btn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_ic_favorite" />


        <ImageButton
            android:id="@+id/product_comment_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/videos"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_comment_black_24dp"
            android:tint="@color/colorAccentBlue"/>

    <ImageButton
        android:id="@+id/product_share_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/videos"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_share_black_24dp"
        android:tint="@color/colorAccentBlue"/>







    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/articlelikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="25000 likes"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/articleviews"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/articlelikes"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="25000 views"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/articleCommentCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All 10 Comments"
            android:textSize="13sp"
            android:layout_margin="5dp"
            android:textColor="@color/quantum_grey"/>
    </LinearLayout>
</LinearLayout>

